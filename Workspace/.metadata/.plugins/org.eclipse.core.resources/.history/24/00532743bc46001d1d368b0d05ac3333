import java.util.Iterator;
import java.util.Scanner;

public class LessonA {

	public static void main(String[] args) {
		String[] itemsLetter = {"fuck","shit","hell","bitch"};
		Scanner scanner = new Scanner(System.in);
		boolean checkInput = false;
		System.out.print("Nhập vào một chuỗi: ");
		String input = scanner.nextLine();
		String temp = null;
		for(int i = 0; i < itemsLetter.length; i++) {
			if(input.contains(itemsLetter[i])) {
				 temp = itemsLetter[i];
				 input = input.replace(temp, convertString(temp));
				 
				 if(input.contains(itemsLetter[i].toUpperCase())) {
					 temp = itemsLetter[i];
					 input = input.replace(temp, convertStringUpper(temp));
				 }else if(input.contains(itemsLetter[i].toLowerCase())){
					 temp = itemsLetter[i];
					 input = input.replace(temp, convertStringLow(temp));
				 }
				
				checkInput = true;
			}
			else {
				checkInput = false;
			}
			
		}
		
			
		if(checkInput) {
			System.out.println(input);
		}else {
			System.out.println(input);
		}
		
		
	}
	public static String convertString(String str) {
		char[] chItem = str.toCharArray();
	
		for(int i = 0; i < chItem.length; i++) {
			if(i > 0 && i < (chItem.length - 1)) {
				chItem[i] = '*';
			}
		}
		str = String.valueOf(chItem);
		
		
		return str;
	}
	public static String convertStringLow(String str) {
		char[] chItem = str.toLowerCase().toCharArray();
	
		for(int i = 0; i < chItem.length; i++) {
			if(i > 0 && i < (chItem.length - 1)) {
				chItem[i] = '*';
			}
		}
		str = String.valueOf(chItem);
		
		
		return str;
	}
	public static String convertStringUpper(String str) {
		char[] chItem = str.toUpperCase().toCharArray();
	
		for(int i = 0; i < chItem.length; i++) {
			if(i > 0 && i < (chItem.length - 1)) {
				chItem[i] = '*';
			}
		}
		str = String.valueOf(chItem);
		
		
		return str;
	}
}

